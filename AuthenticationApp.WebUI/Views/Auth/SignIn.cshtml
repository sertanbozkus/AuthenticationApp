@model SignInViewModel

<div class="row offset-3">


    <div class="col-6" style="width:60%">



        <div class="card">

            <div class="card-header fw-bold fs-4 text-center">
                Sign In Form
            </div>

            <div class="card-body">
                <form method="post" asp-controller="Auth" asp-action="SignIn">

                    @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger fw-bold">
                            @ViewBag.ErrorMessage
                        </div>
                    }


                    <div class="form-floating mt-2">
                        <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Email address</label>
                        <span asp-validation-for="Email" class="text-danger fw-bold mt-1"></span>
                    </div>
                    
                    <div class="form-floating mt-2">
                        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Password</label>
                        <span asp-validation-for="Password" class="text-danger fw-bold mt-1"></span>
                    </div>

                    <div class="form-check text-start my-3">
                        <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            Remember me
                        </label>
                    </div>
                    <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
                    <p class="mt-5 mb-3 text-body-secondary">© 2017–2024</p>
                </form>
            </div>

        </div>



    </div>



</div>