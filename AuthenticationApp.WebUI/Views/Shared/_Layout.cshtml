        @if (!string.IsNullOrWhiteSpace(TempData["SignUpMessage"]?.ToString()))
        {

            @:toastr.success("@TempData["SignUpMessage"]?.ToString()", "System Message")


        }




    </script> *@


    @if (!string.IsNullOrWhiteSpace(TempData["SignUpMessage"]?.ToString()))
    { 
        <script>
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": true,
                "positionClass": "toast-top-center",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            toastr["success"]("@TempData["SignUpMessage"]?.ToString()", "System Message")
        </script>



    }


</body>
</html>